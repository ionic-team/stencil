{
  "compilerOptions": {
    // "strict": true,
    // "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "target": "es2017",
    "outDir": "www",
    "baseUrl": ".",
    "paths": {
      "@stencil/core": ["../../internal"],
      "@stencil/core/internal": ["../../internal"],
      "@test-sibling": ["./test-sibling"]
    }
  },
  "include": [
    "test-app/components.d.ts",
    "test-app/**/*.spec.ts",
    "test-app/**/*.tsx",
    "test-app/util.ts",
    "test-app/global.ts",
    "node_modules/ionic-git/core/src/utils/**/*",
    "node_modules/ionic-git/core/src/global/**/*",
    "node_modules/ionic-git/core/src/components/button/**/*",
    "node_modules/ionic-git/core/src/components/router/**/*",
    "node_modules/ionic-git/core/src/components/route/**/*",
    "node_modules/ionic-git/core/src/interface.d.ts"
  ],
  "exclude": [
    "test-prerender",
    "test-sibling",
    "node_modules/ionic-git/core/src/**/test"
  ]
}
