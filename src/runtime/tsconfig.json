{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-runtime",
    "pretty": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@build-conditionals": [
        "../compiler/app-core/build-conditionals.ts"
      ],
      "@platform": [
        "../client/index.ts"
      ],
      "@runtime": [
        "./index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "include": [
    "./index.ts",
    "../index.ts",
    "../client/polyfills/",
    "../../types/rollup-plugin-commonjs.d.ts",
    "../../types/rollup-plugin-node-globals.d.ts",
    "../../types/rollup-plugin-node-resolve.d.ts"
  ],
  "exclude": [
    "../client/polyfills/css-shim/test/"
  ]
}
