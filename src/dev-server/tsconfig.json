{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-dev-server",
    "pretty": true,
    "rootDir": "../",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@mock-doc": [
        "../mock-doc/index.ts"
      ],
      "@sys": [
        "../sys/node/index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "files": [
    "./index.ts",
    "../../types/rollup-plugin-commonjs.d.ts",
    "../../types/rollup-plugin-node-globals.d.ts",
    "../../types/rollup-plugin-json.d.ts",
    "../../types/rollup-plugin-node-resolve.d.ts"
  ]
}
