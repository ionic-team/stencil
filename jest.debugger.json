{
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./src/tsconfig.json"
    }
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "/src/.*\\.spec\\.(ts|tsx|js)$"
}
