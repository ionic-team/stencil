{
  "name": "@stencil/core",
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "stencil": "bin/stencil"
  },
  "files": [
    "bin/",
    "dist/",
    "compiler.js",
    "server.js",
    "testing.js"
  ],
  "scripts": {
    "build": "npm run clean && npm run build.compiler && npm run build.core && npm run build.server && npm run build.testing && npm run build.cli && npm run build.sys.node && npm run prepare.package",
    "build.cli": "tsc -p src/cli/tsconfig.json && node scripts/build-cli.js",
    "build.compiler": "tsc -p src/compiler/tsconfig.json && node scripts/build-compiler.js",
    "build.core": "tsc -p src/tsconfig.json && node scripts/build-loader.js && node scripts/build-core.js",
    "build.loader": "node scripts/build-loader.js",
    "build.server": "tsc -p src/server/tsconfig.json && node scripts/build-server.js",
    "build.sys.browser": "tsc -p src/sys/browser/tsconfig.json && node scripts/build-sys-browser.js",
    "build.sys.node": "tsc -p src/sys/node/tsconfig.json && node scripts/build-sys-node.js",
    "build.testing": "tsc -p src/testing/tsconfig.json && node scripts/build-testing.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "rimraf dist/",
    "deploy": "node scripts/deploy.js",
    "prepare.deploy": "node scripts/deploy.js --prepare",
    "prepare.package": "node scripts/prepare-package.js",
    "set.version": "node scripts/set-version.js",
    "start": "npm install && npm run build",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache"
  },
  "dependencies": {
    "chokidar": "1.7.0",
    "jsdom": "11.5.1",
    "node-sass": "4.7.2",
    "rollup": "0.53.2",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "typescript": "^2.6.2",
    "uglify-es": "3.3.2",
    "workbox-build": "3.0.0-alpha.3"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/css": "0.0.30",
    "@types/fs-extra": "^2.0.0",
    "@types/jest": "18.1.1",
    "@types/jsdom": "^11.0.0",
    "@types/node": "7.0.5",
    "chalk": "2.1.0",
    "clean-css": "^4.1.9",
    "conventional-changelog-cli": "^1.3.5",
    "execa": "^0.8.0",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.2",
    "inquirer": "^3.3.0",
    "is-glob": "^4.0.0",
    "jest": "^21.2.1",
    "jest-environment-node-debug": "^2.0.0",
    "knuth-shuffle": "1.0.1",
    "listr": "^0.13.0",
    "memory-fs": "^0.4.1",
    "minimatch": "^3.0.4",
    "node-fetch": "^1.7.3",
    "read-pkg-up": "^2.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "ts-jest": "^21.1.3",
    "tslint": "^5.6.0",
    "tslint-ionic-rules": "0.0.8",
    "webpack": "^3.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/stencil.git"
  },
  "author": "Ionic Team",
  "homepage": "https://stenciljs.com/",
  "description": "A Compiler for Web Components",
  "keywords": [
    "web components",
    "components",
    "custom elements",
    "stencil",
    "ionic",
    "webapp",
    "pwa"
  ],
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/setupTests.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|tsx|js)$"
  }
}
