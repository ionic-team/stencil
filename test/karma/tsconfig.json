{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "target": "es5",
    "outDir": "www",
    "baseUrl": ".",
    "paths": {
      "@stencil/core": ["../../dist"],
      "@stencil/core/internal": ["../../internal"]
    }
  },
  "include": [
    "test-app/components.d.ts",
    "test-app/**/*.spec.ts",
    "test-app/**/*.tsx",
    "test-app/util.ts",
    "test-sibling/**/*.spec.ts",
    "test-sibling/**/*.tsx",
    "test-edge-isolation/components.d.ts",
    "test-edge-isolation/**/*.spec.ts",
    "test-edge-isolation/**/*.tsx"
  ]
}
