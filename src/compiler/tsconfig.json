{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-compiler",
    "pretty": true,
    "rootDir": "../",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@build-conditionals": [
        "./app-core/build-conditionals.ts"
      ],
      "@platform": [
        "../client/index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "include": [
    "../../types/*.d.ts"
  ],
  "files": [
    "./index.ts",
    "../utils/index.ts",
    "../../types/rollup-plugin-commonjs.d.ts",
    "../../types/rollup-plugin-node-globals.d.ts",
    "../../types/rollup-plugin-json.d.ts",
    "../../types/rollup-plugin-node-resolve.d.ts"
  ]
}