{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist/transpiled-core",
    "pretty": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@build-conditionals": [
        "./compiler/app-core/build-conditionals.ts"
      ],
      "@mock-doc": [
        "./mock-doc/index.ts"
      ],
      "@testing": [
        "../testing/index.js"
      ],
      "@utils": [
        "./utils/index.ts"
      ]
    }
  },
  "include": [
    "index.ts",
    "../types/*.d.ts",
    "runtime/**/*.ts"
  ]
}
