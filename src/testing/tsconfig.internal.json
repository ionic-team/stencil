{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "target": "es2017",
    "useUnknownInCatchVariables": true,
    "baseUrl": ".",
    "paths": {
      "@stencil/core/internal": ["../internal/index.ts"],
      "@stencil/core/internal/client": ["../client/index.ts"],
      "@stencil/core/cli": ["../cli/index.ts"],
      "@stencil/core/compiler": ["../compiler/index.ts"],
      "@stencil/core/declarations": ["../declarations/index.ts"],
      "@stencil/core/mock-doc": ["../mock-doc/index.ts"],
      "@stencil/core/testing": ["../testing/index.ts"],
      "@stencil/core": ["../index.ts"],
      "@utils": ["../utils/index.ts"]
    }
  }
}
