{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es2017",
      "esnext.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-hydrate",
    "pretty": true,
    "removeComments": true,
    "rootDir": "../",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@build-conditionals": [
        "../compiler/app-core/build-conditionals.ts"
      ],
      "@compiler": [
        "../compiler/index.ts"
      ],
      "@mock-doc": [
        "../mock-doc/index.ts"
      ],
      "@platform": [
        "./platform/index.ts"
      ],
      "@runtime": [
        "../runtime/index.ts"
      ],
      "@utils": [
        "../utils/index.ts"
      ]
    }
  },
  "include": [
    "../../types/*.d.ts"
  ],
  "files": [
    "runner/index.ts",
    "platform/index.ts"
  ]
}
