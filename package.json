{
  "name": "@stencil/core",
  "version": "0.0.6-0",
  "license": "MIT",
  "bin": {
    "stencil": "./bin/stencil"
  },
  "engines": {
    "node": ">=6.11.0"
  },
  "files": [
    "bin",
    "dist/cli",
    "dist/client",
    "dist/compiler",
    "dist/server",
    "dist/testing",
    "dist/util",
    "dist/index.js",
    "dist/index.d.ts",
    "testing"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build.compiler && npm run build.core && npm run build.server && npm run build.testing-util && npm run build.cli-util",
    "build.compiler": "npm run transpile.compiler && node scripts/build-compiler.js",
    "build.core": "npm run transpile.core && node scripts/build-core.js",
    "build.cli-util": "npm run transpile.logger && node scripts/build-cli-util.js",
    "build.server": "npm run transpile.server && node scripts/build-server.js",
    "build.testing-util": "npm run transpile.testing-util && node scripts/build-testing-util.js",
    "clean": "rimraf dist/",
    "dev": "(npm run transpile && node scripts/dev-watch.js) & npm run transpile.watch",
    "deploy": "np",
    "start": "npm install && npm run build",
    "test": "jest --no-cache",
    "test.watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "transpile": "npm run transpile.compiler && npm run transpile.core",
    "transpile.compiler": "tsc -p src/compiler/tsconfig.json",
    "transpile.core": "tsc -p src/tsconfig.json",
    "transpile.logger": "tsc -p src/util/logger/command-line-logger/tsconfig.json",
    "transpile.server": "tsc -p src/server/tsconfig.json",
    "transpile.testing-util": "tsc -p src/testing/tsconfig.json",
    "transpile.watch": "tsc -p src/compiler/tsconfig.json -w & tsc -p src/tsconfig.json -w"
  },
  "dependencies": {
    "chokidar": "^1.7.0",
    "jsdom": "^11.1.0",
    "node-sass": "^4.5.0",
    "rollup": "^0.47.2",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "typescript": "^2.5.0-dev.20170808",
    "uglify-es": "^3.0.26",
    "workbox-build": "^2.0.0"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/chalk": "^0.4.31",
    "@types/css": "0.0.30",
    "@types/fs-extra": "^2.0.0",
    "@types/jest": "18.1.1",
    "@types/jsdom": "^11.0.0",
    "@types/node": "7.0.5",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-es2015-block-scoped-functions": "^6.22.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.23.0",
    "babel-plugin-transform-es2015-classes": "^6.23.0",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-parameters": "^6.23.0",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.22.0",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "chalk": "^2.1.0",
    "clean-css": "^4.1.8",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.2",
    "google-closure-compiler": "20170218.0.0",
    "is-glob": "^4.0.0",
    "jest": "19.0.2",
    "knuth-shuffle": "1.0.1",
    "memory-fs": "^0.4.1",
    "node-fetch": "^1.7.2",
    "np": "^2.16.0",
    "rimraf": "2.6.1",
    "tslint": "^5.6.0",
    "tslint-ionic-rules": "0.0.8",
    "webpack": "^3.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/stencil.git"
  },
  "author": "Ionic Team",
  "homepage": "https://github.com/ionic-team/stencil",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/scripts/jest.preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.(ts|tsx|js)$"
  }
}
