{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../dist/transpiled-compiler",
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts",
    "../../types/jsx.d.ts",
    "../../types/snabbdom-jsx.d.ts"
  ]
}
